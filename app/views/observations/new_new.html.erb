<h1>New Observation</h1>
<div>
</div>
<%= form_for [@patient, @observation] do |f| %>
<span>
  <%= f.label :patient %>
  <%= f.collection_select(:patient_id, Patient.all, :id, :first_name, prompt: true)%>
</span>
<span><%= link_to 'Patient not listed?', new_patient_path %></span>
<div>
  <%= f.label :date %>
  <%= f.date_field :date, :value => Date.today %>
</div>
<div>
  <%= f.label :activity %>
  <%= f.text_field :activity, :value => current_user.role %>
</div>
<div>
  <%= f.label :target_program, 'Target Program' %>
  <%= f.text_field :target_program %>
</div>
<div>
  <%= f.label :prompt %>
  <%= f.text_field :prompt %>
</div>
<div>
  <%= f.label :behaviors %>
  <%= f.text_field :behaviors %>
</div>
<div>
  <%= f.label :session_notes %>
  <%= f.text_area :session_notes %>
</div>
<%= f.submit "Save" %>
<%= link_to "Cancel", patients_path %>
<% end %>
