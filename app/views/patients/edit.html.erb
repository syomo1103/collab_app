<%= form_for [@patient] do |f| %>
  <div class="field">
    <%= f.file_field :image %>
  </div>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :required => true %>
  </div>
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, :required => true %>
  </div>
  <div>
    <%= f.label :diagnosis %>
    <%= f.text_field :diagnosis, :required => true %>
  </div>
  <div>
    <%= f.label :age %>
    <%= f.text_field :age, :required => true %>
  </div>
  <div>
    <%= f.label :gender %>
    <%= f.select :gender, ['Female', 'Male', 'Do not disclose'], :prompt => 'Select One:', :required => true %>
  </div>
  <div>
    <%= f.label :parent %>
    <%= f.text_field :parent, :required => true %>
  </div>
  <div>
    <%= f.label :parent_email %>
    <%= f.email_field :parent_email, :required => true %>
  </div>
  <div class="field">
  Select all that apply:
  <br>
    <%= f.check_box :home_session %>
    <%= f.label :home_session %>
    <%= f.check_box :school_session %>
    <%= f.label :school_session %>
  </div>
  <%= f.submit "Update Patient" %> | <%= link_to "Cancel", patient_path(@patient) %>
<% end %>


